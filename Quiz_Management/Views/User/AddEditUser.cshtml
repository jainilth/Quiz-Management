@model Quiz_Management.Models.UserModel
<main id="main" class="main">
    <div class="container-fluid">
        <h2 style="color:steelblue" class="card-title fs-2">User Add/Edit</h2>
        <div class="card m-2">
            <div class="card-body">
                <nav aria-label="breadcrumb" class="my-3">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="User" asp-action="UserList">User</a>
                        </li>
                        <li class="breadcrumb-item active">User Add</li>
                    </ol>
                </nav>

                <form asp-controller="User" asp-action="UserSave" method="post">
                    <input hidden asp-for="UserID" />
                    <div class="mb-3">
                        <span class="text-danger">*</span>
                        <label class="form-label">Username</label>
                        <input asp-for="UserName" class="form-control">
                        <span asp-validation-for="UserName" class="text text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <span class="text-danger">*</span>
                        <label class="form-label">Email</label>
                        <input asp-for="Email" UserName"Name" class="form-control">
                        <span asp-validation-for="Email" class="text text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <span class="text-danger">*</span>
                        <label class="form-label">Password</label>
                        <input asp-for="Password" class="form-control">
                        <span asp-validation-for="Password" class="text text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <span class="text-danger">*</span>
                        <input asp-for="IsActive" class="form-check-input">
                        <label class="form-label">Is Active</label>
                        <span asp-validation-for="IsActive" class="text text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <span class="text-danger">*</span>
                        <input asp-for="IsAdmin" class="form-check-input">
                        <label class="form-label">Is Admin</label>
                        <span asp-validation-for="IsAdmin" class="text text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <span class="text-danger">*</span>
                        <label class="form-label">Mobile</label>
                        <input asp-for="Mobile" type="text" class="form-control">
                        <span asp-validation-for="Mobile" class="text text-danger"></span>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-success me-2">Save</button>
                        <button type="button" class="btn btn-danger">Reset</button>
                        <a class="btn btn-warning ms-1" asp-area="" asp-controller="User" asp-action="UserList">
                            Back
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
