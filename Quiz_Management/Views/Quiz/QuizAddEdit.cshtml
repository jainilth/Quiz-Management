@model Quiz_Management.Models.QuizModel
<main id="main" class="main">
    <div class="container-fluid">
        <h2 style="color:steelblue" class="card-title fs-2">Quiz Add/Edit</h2>
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadcrumb" class="my-3">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Quiz" asp-action="QuizList">Quiz</a>
                        </li>
                        <li class="breadcrumb-item active">Quiz Add</li>
                    </ol>
                </nav>
                <form asp-controller="Quiz" asp-action="QuizSave" method="post">
                    <input hidden asp-for="QuizID" />
                    <div class="mb-3">
                        <span class="text-danger">*</span>
                        <label class="form-label">Quiz Name</label>
                        <input asp-for="QuizName" class="form-control">
                        <span asp-validation-for="QuizName" class="text text-danger "></span>
                    </div>

                    <div class="mb-3">
                        <span class="text-danger">*</span>
                        <label class="form-label">Total Questions</label>
                        <input asp-for="TotalQuestions" class="form-control">
                        <span asp-validation-for="TotalQuestions" class="text text-danger "></span>
                    </div>

                    <div class="mb-3">
                        <span class="text-danger">*</span>
                        <label class="form-label">Quiz Date</label>
                        <input asp-for="QuizDate" class="form-control">
                        <span asp-validation-for="QuizDate" class="text text-danger "></span>
                    </div>

                    <div class="mb-3">
                        <span class="text-danger">*</span>
                        <label class="form-label">User ID</label>
                        <input asp-for="UserID" class="form-control">
                        <span asp-validation-for="UserID" class="text text-danger "></span>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-success me-2">Save</button>
                        <button type="button" class="btn btn-danger">Reset</button>
                        <a class="btn btn-warning ms-1" asp-controller="Quiz" asp-action="QuizList">
                            Back
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
