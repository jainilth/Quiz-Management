<main id="main" class="main">
    <div class="container-fluid">
        <h2 style="color:steelblue" class="card-title fs-2">Quiz Wise Questions Add/Edit</h2>
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mt-3">
                        <li class="breadcrumb-item">
                            <a asp-controller="QuizWiseQuestion" asp-action="QuizWiseQuestionList">Quiz Wise Questions</a>
                        </li>
                        <li class="breadcrumb-item active">Quiz Wise Questions Add</li>
                    </ol>
                </nav>
                <form>

                    <div class="mb-3">
                        <span class="text-danger">*</span>
                        <label for="quizId" class="form-label">Quiz ID</label>
                        <select class="form-select" id="quizId" required>
                            <option value="">Select Quiz</option>
                            <option value="1">Quiz 1</option>
                            <option value="2">Quiz 2</option>
                            <option value="3">Quiz 3</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <span class="text-danger">*</span>
                        <label for="questionId" class="form-label">Question ID</label>
                        <select class="form-select" id="questionId" required>
                            <option value="">Select Question</option>
                            <option value="1">Question 1</option>
                            <option value="2">Question 2</option>
                            <option value="3">Question 3</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <span class="text-danger">*</span>
                        <label for="userId" class="form-label">User ID</label>
                        <input type="text" class="form-control" id="userId" required>
                    </div>

                    <button type="submit" class="btn btn-success me-2">Save</button>
                    <button type="button" class="btn btn-danger">Reset</button>
                    <a class="btn btn-warning ms-1" asp-controller="QuizWiseQuestion" asp-action="QuizWiseQuestionList">
                        Back
                    </a>
                </form>
            </div>
        </div>
    </div>
</main>
